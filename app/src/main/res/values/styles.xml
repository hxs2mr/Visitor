<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="lay_content_textview_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/space_36</item>
        <item name="android:textColor">@color/color_3e3e3e</item>
        <item name="android:textSize">@dimen/space_26</item>
        <item name="android:layout_marginLeft">@dimen/space_96</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="lay_divide_line_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/space_1</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@color/color_e5e5e5</item>
    </style>

    <style name="lay_divide_line_vertical">
        <item name="android:layout_width">@dimen/space_1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@color/color_e5e5e5</item>
    </style>

    <style name="lay_cashier_title_textview_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_ffffff</item>
        <item name="android:textSize">@dimen/space_20</item>
        <item name="android:background">@drawable/ic_visitor_textview_background</item>
    </style>


    <style name="lay_cashier_content_textview_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_808080</item>
        <item name="android:textSize">@dimen/space_20</item>
        <item name="android:background">@drawable/ic_visitor_item_background</item>
    </style>


    <style name="alert_dialog" parent="android:Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/color_00000000</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

</resources>
